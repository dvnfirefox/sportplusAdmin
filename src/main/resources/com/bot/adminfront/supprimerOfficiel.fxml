<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bot.adminfront.controller.officiel.SupprimerController">

    <!-- Search bar + ChoiceBox -->
    <HBox spacing="10"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10">

        <TextField fx:id="searchField"
                   promptText="Rechercher un utilisateur..."
                   HBox.hgrow="ALWAYS"/>

        <ChoiceBox fx:id="filterChoiceBox"
                   prefWidth="150"/>
    </HBox>

    <!-- Container for the user list -->
    <VBox fx:id="listContainer"
          spacing="5"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10"/>

</AnchorPane>

