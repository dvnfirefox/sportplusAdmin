<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bot.adminfront.controller.PartiesController"
            prefHeight="600.0" prefWidth="900.0">

    <!-- Search bar + ChoiceBox + Save Button -->
    <HBox spacing="10"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10">

        <HBox fx:id="searchContainer" spacing="10">
            <!-- Dynamic content inserted here by controller -->
        </HBox>

        <ChoiceBox fx:id="filterChoiceBox"
                   prefWidth="150"/>

        <Button fx:id="saveAllButton" text="Enregistrer les modifications"/>
    </HBox>

    <!-- TableView for parties -->
    <TableView fx:id="tableView"
               AnchorPane.topAnchor="50"
               AnchorPane.leftAnchor="10"
               AnchorPane.rightAnchor="10"
               AnchorPane.bottomAnchor="10">

        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="tournoiColumn" text="Tournoi" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="equipeLocalColumn" text="Ã‰quipe Local" prefWidth="150"/>
            <TableColumn fx:id="pointLocalColumn" text="Points Local" prefWidth="100"/>
            <TableColumn fx:id="equipeVisiteurColumn" text="Ã‰quipe Visiteur" prefWidth="150"/>
            <TableColumn fx:id="pointVisiteurColumn" text="Points Visiteur" prefWidth="100"/>
        </columns>
    </TableView>
</AnchorPane>