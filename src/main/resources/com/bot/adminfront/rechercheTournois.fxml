<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bot.adminfront.controller.tournois.TournoisController">

    <!-- Search bar + ChoiceBox -->
    <HBox spacing="10"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10">

        <HBox fx:id="searchContainer" spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <!-- Dynamic content inserted here by controller -->
        </HBox>

        <ChoiceBox fx:id="filterChoiceBox"
                   prefWidth="150"/>
    </HBox>

    <!-- TableView for tournois -->
    <TableView fx:id="tableView"
               AnchorPane.topAnchor="50"
               AnchorPane.leftAnchor="10"
               AnchorPane.rightAnchor="10"
               AnchorPane.bottomAnchor="10">

        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="debutColumn" text="Début" prefWidth="150"/>
            <TableColumn fx:id="finColumn" text="Fin" prefWidth="150"/>
            <TableColumn fx:id="maximumColumn" text="Maximum" prefWidth="80"/>
            <TableColumn fx:id="federationColumn" text="Fédération" prefWidth="120"/>
            <TableColumn fx:id="categorieColumn" text="Catégorie" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="200"/>
        </columns>
    </TableView>
</AnchorPane>
